tweets.show.erb
<label> <%= @user %> </label>
<label> <%= @tweet %> </label>

<form method='post' action="/tweets/<%=@tweet.id%>/delete">
  <input id="hidden" type="hidden" name="_method" value="delete">
  <%= @tweet.content %>

  <p><input type="submit" name="delete tweet" value="Delete Tweet"> </p>
</form>

<a href="/tweets/<%=@tweet.id%>/edit">Edit Tweet</a>
